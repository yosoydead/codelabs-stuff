<?xml version="1.0" encoding="utf-8"?>
<!--change from ConstraintLayout to LinearLayout-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="@dimen/layout_margin">

    <!--for the textView, set the following attributes:
            - id=name_text
            - text= your name
            - textSize = 20sp
            - textColor = black
            - textAlignment = center
            - extract the textsize to a separate file
            - padding = 8sp
            - layout_margin = 16sp
            - font = roboto-->
    <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:padding="@dimen/small_padding"
            android:fontFamily="@font/roboto"
    />

    <!--place an editText view below name_text and above star_image
            - id = nickname_edit
            - style as the textView
            - textAlign = center
            - hint = @string/what_is_your_name
            - inputType = textPersonName
            -->
    <EditText android:id="@+id/nickname_edit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size"
              android:textColor="@android:color/black"
              android:textAlignment="center"
              android:fontFamily="@font/roboto"
              android:padding="@dimen/small_padding"
              android:hint="@string/what_is_your_nickname"
              android:inputType="textPersonName"/>

    <!--place a button below the nickname_edit view
            - id = done_button
            - text = @string/done
            - layout_gravity = center_horizontal
            - style = use the Widget.AppCompat.Button.Colored
            - marginTop = 16dp
            - font = roboto
            -->
    <Button android:id="@+id/done_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_done"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"/>

    <!--place an imageView below the text
            -top margin = 16dp-->
    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/yellow_star"
                android:id="@+id/star_image"
                app:srcCompat="@android:drawable/btn_star_big_on"/>

    <!--add a scrollView below the star image to display some
    scrollable bio text-->
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bio_scroll">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/small_padding">
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_menu_compass"/>

            <!--use the string resource called BIO to display text-->
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/bio_text"
                      android:textSize="@dimen/text_size"
                      android:paddingStart="16dp"
                      android:paddingEnd="16dp"
                      android:layout_marginTop="@dimen/layout_margin"
                      android:textColor="@android:color/black"
                      android:fontFamily="@font/roboto"
                      android:text="@string/bio"
                      android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>